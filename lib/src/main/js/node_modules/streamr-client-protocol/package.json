{
  "name": "streamr-client-protocol",
  "version": "12.0.0",
  "description": "JavaScript classes implementing the Streamr client-to-node protocol",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streamr-dev/network-monorepo.git",
    "directory": "packages/protocol"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.node.json",
    "prepublishOnly": "npm run clean && NODE_ENV=production npm run build",
    "clean": "jest --clearCache || true; rm -rf dist *.tsbuildinfo node_modules/.cache || true",
    "watch": "tsc --watch",
    "benchmark": "jest test/benchmarks --detectOpenHandles",
    "prepare": "npm run build",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache/ '*/**/*.{js,ts}'",
    "test": "jest",
    "test-unit": "jest test/unit --detectOpenHandles",
    "coverage": "jest --coverage",
    "docs": "typedoc --options typedoc.js"
  },
  "author": "Streamr",
  "license": "Apache-2.0",
  "devDependencies": {
    "@streamr/dev-config": "^1.0.0",
    "@types/heap": "^0.2.28",
    "@types/jest": "^27.0.2",
    "@types/secp256k1": "^4.0.3",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "array-shuffle": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-streamr-ts": "^4.0.1",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.5",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.22.5",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@ethersproject/hdnode": "^5.4.0",
    "@types/debug": "^4.1.7",
    "debug": "^4.3.2",
    "heap": "^0.2.6",
    "secp256k1": "^4.0.2",
    "sha3": "^2.1.4",
    "strict-event-emitter-types": "^2.0.0"
  }
}
